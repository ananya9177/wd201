<div>
    <h5><%= title %></h5> <span id="<%= id %>"><%= data.length %></span>
    <ul class="list-none">
        <% for(var i=0; i<data.length; i++) {%>
            <li class="Todo-Item">
                <div class="flex items-center w-fit my-2 px-2 py-1 rounded hover:bg-purple-50">
                    <input id="todo-checkbox-<%= data[i].id %>" type="checkbox" <%=data[i].completed ? "checked" : "" %> onclick="updateTodo(<%= data[i].id %>, <%= data[i].completed %>)" class="w-4 h-4 text-blue-600 bg-gray-100 rounded border-gray-300">
                    <label for="todo-checkbox-<%= data[i].id %>" class="ml-2 text-sm text-gray-600 cursor-pointer">
                        <%= data[i].title %>
                    </label>
                    <a href="#" class="ml-2 hidden trash-icon" onclick="deleteTodo(<%= data[i].id %>)">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" width="16" height="16" >
  <path fill-rule="evenodd" d="M5 3.25V4H2.75a.75.75 0 0 0 0 1.5h.3l.815 8.15A1.5 1.5 0 0 0 5.357 15h5.285a1.5 1.5 0 0 0 1.493-1.35l.815-8.15h.3a.75.75 0 0 0 0-1.5H11v-.75A2.25 2.25 0 0 0 8.75 1h-1.5A2.25 2.25 0 0 0 5 3.25Zm2.25-.75a.75.75 0 0 0-.75.75V4h3v-.75a.75.75 0 0 0-.75-.75h-1.5ZM6.05 6a.75.75 0 0 1 .787.713l.275 5.5a.75.75 0 0 1-1.498.075l-.275-5.5A.75.75 0 0 1 6.05 6Zm3.9 0a.75.75 0 0 1 .712.787l-.275 5.5a.75.75 0 0 1-1.498-.075l.275-5.5a.75.75 0 0 1 .786-.711Z" clip-rule="evenodd" />
</svg>                  
                    </a>
                </div>
            </li>
        <% } %>
    </ul>
</div>
